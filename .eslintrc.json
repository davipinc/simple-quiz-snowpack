{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prettier/prettier": [
          "warn",
          {
            "linebreak-style": 0,
            "trailingComma": "none",
            "singleQuote": true,
            "printWidth": 120,
            "endOfLine": "auto"
          }
        ]
    },
    "plugins": [
      "prettier"
    ]
}
